<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/Message_item_Sender_CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Message_item_Sender_MessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:text="Sender Message"/>
            <ImageView
                android:id="@+id/Message_item_Sender_MessageImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/Message_item_Sender_MessageText"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/Message_item_Reciever_CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Message_item_Reciever_MessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Reciever Message"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/Message_item_Reciever_MessageImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/Message_item_Reciever_MessageText"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>